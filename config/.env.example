# Mindcore Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Core Settings
# =============================================================================
MINDCORE_ENV=development
MINDCORE_DEBUG=true

# =============================================================================
# Database
# =============================================================================
# SQLite (default)
MINDCORE_DB_PATH=./data/mindcore.db

# PostgreSQL (production)
# MINDCORE_DB_URL=postgresql://user:password@localhost:5432/mindcore
# MINDCORE_DB_PASSWORD=your-secure-password

# =============================================================================
# Cache (Redis)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password

# =============================================================================
# LLM Providers
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Local LLM (llama.cpp)
# LLAMA_MODEL_PATH=./models/llama-2-7b-chat.gguf

# =============================================================================
# API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
# JWT_SECRET=your-jwt-secret-key-min-32-chars

# =============================================================================
# External Connectors
# =============================================================================
# Orders Database (use read-only credentials!)
# ORDERS_DB_URL=postgresql://readonly:pass@orders-db:5432/orders

# Billing - Stripe (use RESTRICTED read-only API key!)
# STRIPE_API_KEY=rk_live_your-restricted-stripe-key

# Custom API endpoints
# BILLING_API_KEY=your-billing-api-key
# ORDERS_API_KEY=your-orders-api-key

# =============================================================================
# Vector Stores
# =============================================================================
# Pinecone (cloud-managed vector database)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_INDEX_NAME=mindcore

# pgvector (PostgreSQL with vector extension)
# PGVECTOR_CONNECTION_STRING=postgresql://user:pass@localhost:5432/vectors

# Chroma (defaults to local persistence, no env var needed)
# CHROMA_HOST=localhost
# CHROMA_PORT=8000

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/mindcore.log

# =============================================================================
# Security
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
